<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_order_tree" model="ir.ui.view">
        <field name="name">view.order.tree</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_order']"
                   position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='date_order']"
                   position="before">
                <field name="confirmation_date" widget="date"/>
            </xpath>
            <xpath expr="//field[@name='amount_total']" position="before">
                <field name="amount_untaxed" widget="monetary"/>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="project_manager_user_id"/>
            </xpath>
        </field>
    </record>

    <record id="view_quotation_tree" model="ir.ui.view">
        <field name="name">view.quotation.tree</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_order']"
                   position="attributes">
                <attribute name="widget">date</attribute>
            </xpath>
            <xpath expr="//field[@name='amount_total']" position="before">
                <field name="amount_untaxed" widget="monetary"/>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="project_manager_user_id"/>
            </xpath>
        </field>
    </record>

    <record id="view_order_form" model="ir.ui.view">
        <field name="name">view.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='analytic_tag_ids']"
                   position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='date_order']" position="before">
                <label for="project_manager_user_id"/>
                <div>
                    <field name="project_manager_user_id"/>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
